@model List<DapperExample.Models.EmployeeModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<form action="~/User/SearchEmployee" method="post">
    <div class="row">
        <div class="col-md-1">
            Search
        </div>
        <div class="col-md-2">
            <input type="text" name="EmpName" value="" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Go" class="btn btn-success" />
        </div>
        <div class="col-md-7">

        </div>
    </div>
</form>
<table class="table table-bordered table-responsive">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmpId</td>
            <td>@item.EmpName</td>
            <td>@item.EmpSalary</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }, new { @class = "btn btn-primary" })|
                @Html.ActionLink("Delete", "Delete", new { id = item.EmpId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>


@section MySection
{
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
}